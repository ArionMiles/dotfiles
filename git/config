[init]
    defaultBranch = main
[user]
    email = hey@kanishk.io
    name = Kanishk Singh
    signingkey = 36353DD0A7AA59C5
[commit]
    gpgsign = true
[gpg]
    program = gpg
[url "ssh://git@github.com/"]
    insteadOf = https://github.com/
[url "git@github.com:"]
    insteadOf = "gh:"
    pushInsteadOf = "gh:"
[push]
    default = simple
    autoSetupRemote = true
    autocrlf = input
[pull]
    ff = only
[core]
    excludesfile = ~/.config/git/gitignore
    editor = $(which vim)
[commit]
    template = ~/.config/git/gittemplate
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true    # use n and N to move between diff sections
    side-by-side = true
    line-numbers = true
[merge]
    conflictstyle = zdiff3
[diff]
    colorMoved = default
[pager]
  blame  = delta
  diff   = delta
  reflog = delta
  show   = delta

[alias]
    # Pretty git logs -- https://garmoncheg.blogspot.com/2012/06/pretty-git-log.html
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --

